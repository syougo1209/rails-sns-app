<% provide(:title, "signup") %>
<h1 class="title" style="text-align: center">新規ユーザー登録</h1>
<div class="form-horizontal col-md-6 col-md-offset-3" role="form">
  <%= form_for(@user) do |f| %>
    <div class="form-group">
        <%= render 'shared/error_messages' %>

      
        <%= f.label :name, 'ニックネーム', class:'control-label' %>
        <%= f.text_field :name,  class: 'form-control' %>

     
     
        <%= f.label :password, 'パスワード', class:'control-label' %>
    
     
    <%= f.text_field :password,   class: 'form-control' %>
     
     
     
        <%= f.label :password_confirmation, '確認用パスワード', class:'control-label' %>
    
      <%= f.text_field :password_confirmation,  class: 'form-control' %>
    
     
     
        <%= f.label :prefecture, '住んでいる県', class:'control-label' %>
    
       <%= f.select :prefecture, ["神奈川県", "埼玉県", "東京都", "千葉県", "群馬県" ] ,{:prompt => "選択してください"}, {class: 'form-control'} %>
    
   
    </div>
  <%= f.submit '登録', class: "btn btn-primary form-control mt-4" %>
  <% end %>
</div>