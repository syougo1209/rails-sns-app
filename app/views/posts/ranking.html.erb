<%= render 'ranking_title' %>
<section id="posts-search">
<div class="row">
<%= form_tag(ranking_posts_path,method:"get",id:'form1') do %>
     <div class="form-group ranking-form">
      <label for="month-select" class="col-xs-3">月</label>
      <%= select_tag :search,options_for_select(@month_array), class: "form-control col-xs-9", id: "month-select"%>
      </div>
      <div class="form-group ranking-form">
       <label for="month-select" class="col-xs-3" id="month-select-form">都道府県</label>     
      <%= render "shared/prefecture_form" %>
      </div>
      <%= submit_tag "検索" ,class: "ranking-form-button button btn-primary col-xs-offset-3 col-xs-6"%>
      <% end %>
</div>
</section>

<%=render @posts %>
