<section class="post-list col-md-8">
    <div id="post-menu">
    <% if @user==@current_user && current_page?(root_path) %>
    <strong id="user-post-number">タイムライン</strong>
    <% else %>
    <strong id="user-post-number"><%=@user.posts.count %>件の投稿</strong>
    <% end %>
    <strong id="user-favorite-number"><%=@user.like_posts.count %>件のお気に入り</strong>
    </div>
    <div id="users_posts">
   <%= render 'shared/feed'%>
   </div>
   
</section>

<script type="text/javascript">
 $("#user-post-number").css("color","#c0c0c0");
 $("#user-post-number").css("font-size","120%");
 
  $("#user-post-number").on("click", function(){
       
 $("#users_posts").html("<%= escape_javascript(render('shared/feed')) %>");
 $("#user-post-number").css("font-size","120%");
 $("#user-post-number").css("color","#c0c0c0");
 $("#user-favorite-number").css("color","black");
 $("#user-favorite-number").css("font-size","100%");
});
  $("#user-favorite-number").on("click", function(){
     
 $("#users_posts").html("<%= escape_javascript(render('users/user_favorites')) %>");
 $("#user-favorite-number").css("font-size","120%");
 $("#user-post-number").css("font-size","100%");
 $("#user-post-number").css("color","black");
 $("#user-favorite-number").css("color","#c0c0c0");
});
</script>